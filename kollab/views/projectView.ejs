<%- include('./partials/header'); -%>

<div class="container-fluid">
  <h1> <%= project.title %> </h1>
  <p> <%= project.description %> </p>
  <p> Owned by: <%= owner.name %> </p>
  <div class="userList">
    <h2> People on this project: </h2>
    <% users.forEach(function(user) { %>
      <p> <%= user.name %> </p>
    <% }) %>
  </div>
  <form action="/mainPage/<%=project._id%>/join" method="POST">
    <button type="Submit" value="Join Group" color="yellow" class="btn btn-primary">Join</button>
  </form>
</div>

<%- include('./partials/footer'); -%>
